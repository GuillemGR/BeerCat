<div>
<p id="notice"><%= notice %></p>

<h1><%= t('products') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('price') %></th>
      <th><%= t('producer') %></th>
      <th><%= t('quantity') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%@products.each do |product| %>
      <tr>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            <a href="#"><img class="card-img-top" src=<%=product.image%> alt=""></a>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to product.name, product %>
              </h4>
              <h5><%= product.price%></h5>
            </div>
            <div class="card-footer">
              <p class="text-muted"><%=product.producer%></p>
            </div>
          </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path ,{:locale => I18n.locale }%>

</div>