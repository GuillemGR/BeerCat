<div>
<p id="notice"><%= notice %></p>

<h1><%= t('products') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('price') %></th>
      <th><%= t('producer') %></th>
      <th><%= t('quantity') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%@products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.producer %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: t('confirmation')  } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path ,{:locale => I18n.locale }%>

</div>