<div id="container" class="row">
  <!--<h1><#%= t('products') %></h1>-->
  <div class="col-lg-3">
    <h1 class="my-4"></h1>
    <div class="list-group">
      <a href="/products?cathegory=1" class="list-group-item"><%= t("Rossa")%></a>
      <a href="/products?cathegory=2" class="list-group-item"><%= t("Roja")%></a>
      <a href="/products?cathegory=3" class="list-group-item"><%= t("Negra")%></a>
    </div>
  </div>

  <div class="row col-lg-9">
      <%@products.each do |product| %>
      <tr>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            <a href="#"><img class="card-img-top" src=<%=product.image%> alt=""></a>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to product.name, product_path(product.id ,:locale => I18n.locale) %>
              </h4>
              <% if user_signed_in? %>
                <%= link_to t('addcart'), addcart_path(product.id, :locale => I18n.locale)%>
              <% end %>
              <h5><%= product.price%> â‚¬</h5>
            </div>
            <div class="card-footer">
              <p class="text-muted"><%=product.producer%></p>
            </div>
          </div>
        </div>
      </tr>
      <% end %>
  </div>
  <br>


</div>

