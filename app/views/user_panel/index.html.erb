
<%= t('welcome') %>

<div class="container">
  <h1><%=t('my_commands') %></h1>
  <% unless @user_commands.nil? %>
    <table class="table">
      <tr>
        <th><%=t('command_id') %></th>
        <th><%=t('created_at') %></th>
        <th><%= t('state') %></th>
        <th></th>
      </tr>
    <% @user_commands.each do |command| %>
        <tr>
          <td><%=command.id %> </td>
          <td><%=command.created_at %></td>
          <td><%=t(command.state) %></td>
          <td><%= link_to t('details'),command_details_path(command.id), {:class => 'btn btn-secondary'} %> </td>
        </tr>
    <% end %>
    </table>
  <% end %>
</div>

<div class="container">
  <%= link_to t('edit_user'), edit_user_registration_path(:locale => I18n.locale) , :class => 'btn btn-secondary'  %>

</div>