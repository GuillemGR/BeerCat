<div class="container">

  <div class="row">

    <div class="col-lg-3">

      <h1 class="my-4"></h1>
      <div class="list-group">
        <a href="/products?cathegory=1" class="list-group-item"><%= t("Rossa")%></a>
        <a href="/products?cathegory=2" class="list-group-item"><%= t("Roja")%></a>
        <a href="/products?cathegory=3" class="list-group-item"><%= t("Negra")%></a>
      </div>

    </div>
    <!-- /.col-lg-3 -->

    <div class="col-lg-9">

      <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="/products/7" data-slide-to="0" class="active"></li>
          <li data-target="/products/8" data-slide-to="1"></li>
          <li data-target="/products/9" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active">
            <a href="/products/7"><img class="d-block img-fluid" src="https://i.imgur.com/ilpsNbj.png" alt="First slide"></a>
          </div>
          <div class="carousel-item">
            <a href="/products/8"><img class="d-block img-fluid" src="https://i.imgur.com/xFd7LEi.png" alt="Second slide"></a>
          </div>
          <div class="carousel-item">
            <a href="/products/9"><img class="d-block img-fluid" src="https://i.imgur.com/j4RkeG2.png" alt="Third slide"></a>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <h1>Productes Destacats</h1>
      <div class="row">
        <%@products.each do |product| %>
          <tr>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <a href="#"><img class="card-img-top" src=<%=product.image%> alt=""></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to product.name, product %>
                  </h4>
                  <% if user_signed_in? %>
                    <%= link_to 'Add to Cart', addcart_path(product.id)%>
                  <% end %>
                  <h5><%= product.price%> â‚¬</h5>
                </div>
                <div class="card-footer">
                  <p class="text-muted"><%=product.producer%></p>
                </div>
              </div>
            </div>
          </tr>
        <% end %>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

  </div>
  <!-- /.row -->

</div>