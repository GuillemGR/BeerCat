<% unless request.original_fullpath.include? "/admins" %>
<div style="margin-bottom: 10%" class="container register">
  <h2><%=t('register') %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label t('email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label t('password_confirm') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
    <% if request.original_fullpath.include? "/users/sign_up" %>


  <div class="field">
    <%= f.label t('name') %><br/>
    <%= f.text_field :name, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label t('surname')%><br/>
    <%= f.text_field :surname, autocomplete: "off" %>
  </div>
    <% end %>
  <div id="submit" class="action">
    <%= f.submit t('register') %>
  </div>

<% end %>

</div>
<% end %>